 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/look_main_layout"
	    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/look_fragment_background_color"
        android:minHeight="90dp"
        android:orientation="horizontal" >
        
    <CheckBox
        android:id="@+id/look_checkbox"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
       	android:layout_marginLeft="15dp"
       	android:layout_marginRight="13dp"
       	android:visibility="gone"
       	android:gravity="right"/>
	
	<RelativeLayout 
	    android:id="@+id/look_fragment_element"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center_vertical"
	    android:longClickable="true"
	    android:background="@drawable/look_fragment_button_gradient"
	    android:orientation="horizontal" >
	
	    <ImageView 
	        android:id="@+id/look_image"
	        android:layout_width="72dp"
	        android:layout_height="65dp"
	        android:scaleType="fitCenter"
	        android:background="@drawable/image_contour"
	     	android:layout_centerVertical="true"
	     	android:layout_marginLeft="9dp"
	     	android:contentDescription="@string/look"
	        android:src="@drawable/catroid_banzai" />
	    
	     <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_toRightOf="@+id/look_image"
	        android:layout_toLeftOf="@+id/look_arrow"
	        android:paddingLeft="12.5dp"
	        android:gravity="center_vertical"
	        android:orientation="vertical" >
	        
		    <TextView style="@style/look_fragment_main"
		        android:id="@+id/look_name"
		        android:paddingRight="8dp"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" />
		
		    <LinearLayout
		        android:id="@+id/look_details"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        
		        <LinearLayout 
	        	    android:id="@+id/sound_details_left"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:orientation="vertical">
	        		
		            <TextView style="@style/look_fragment_detail"
		      			android:id="@+id/look_measure_prefix"
		      		 	android:layout_width="wrap_content"
		       		 	android:layout_height="wrap_content"
		       		 	android:text="@string/look_measure" />
		            
		            <TextView style="@style/look_fragment_detail"
		      			android:id="@+id/look_size_prefix"
		      		 	android:layout_width="wrap_content"
		       		 	android:layout_height="wrap_content"
		       		 	android:text="@string/size" />	
		        </LinearLayout>
		            
		        <LinearLayout 
	        	    android:id="@+id/sound_details_right"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:paddingLeft="39dp"
	        		android:orientation="vertical">
		            
		            <TextView style="@style/look_fragment_detail"
				        android:id="@+id/look_measure"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" />
		            
		             <TextView style="@style/look_fragment_detail"
		                android:id="@+id/look_size"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content" />
			    </LinearLayout>	
			</LinearLayout>	
		</LinearLayout>
		
		<ImageView  
		    android:id="@+id/look_arrow"
		    android:layout_alignParentRight="true"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:paddingRight="14dp"
		 	android:layout_centerVertical="true"
		 	android:contentDescription="@string/look"
		    android:src="@drawable/button_arrow" />
	</RelativeLayout>
</LinearLayout>
